# GoGym - Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=gogym
DB_USER=gogym
DB_PASSWORD=password
MYSQL_ROOT_PASSWORD=rootpassword

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# S3 / MinIO Configuration (Development)
S3_ENDPOINT=http://minio:9000
S3_BUCKET=gogym-photos
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000/gogym-photos

# MinIO Admin (Development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Image Processing
IMGPROXY_BASE_URL=http://imgproxy:8080

# Application Configuration
APP_ENV=development
PORT=8080
LOG_LEVEL=debug

# Frontend Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_IMGPROXY_URL=http://localhost:8081

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# OAuth (if implementing social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Production S3 Configuration (replace MinIO values in production)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_PUBLIC_URL=https://your-cloudfront-domain.cloudfront.net

# SMTP Configuration (for emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317