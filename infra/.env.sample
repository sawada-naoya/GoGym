# ================================
# Docker Compose 環境変数設定
# ================================
# Docker Compose用の環境変数設定
# コピーして .env にリネームしてください: cp .env.docker.sample .env

# MySQL コンテナ設定
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=gogym
MYSQL_USER=gogym
MYSQL_PASSWORD=password

# Redis コンテナ設定
REDIS_PASSWORD=

# MinIO コンテナ設定
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# ポート設定（職場環境との競合回避のため+1）
MYSQL_PORT=3307
REDIS_PORT=6380
API_PORT=8081
WEB_PORT=3001
MINIO_PORT=9001
MINIO_CONSOLE_PORT=9002
IMGPROXY_PORT=8082
GRAFANA_PORT=3003
PROMETHEUS_PORT=9090

# Go API コンテナ設定
APP_ENV=development
APP_PORT=8081
TZ=Asia/Tokyo

# コンテナ間通信用設定（API コンテナ内での接続先）
DB_HOST=mysql
DB_PORT=3306
DB_NAME=gogym
DB_USER=gogym
DB_PASSWORD=password

REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

S3_ENDPOINT=http://minio:9000
S3_BUCKET=gogym-photos
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9001/gogym-photos

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32chars-long
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# CORS 設定
CORS_ALLOW_ORIGINS=http://localhost:3001

# Next.js Web コンテナ設定
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8081/
NEXT_PUBLIC_IMGPROXY_URL=http://localhost:8082

# Grafana 設定
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123