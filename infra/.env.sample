# ================================
# Docker Compose 環境変数設定
# ================================

# --------------------------------
# 共通
# --------------------------------
TZ=Asia/Tokyo

# --------------------------------
# PostgreSQL コンテナ設定
# --------------------------------
POSTGRES_DB=gogym
POSTGRES_USER=gogym
POSTGRES_PASSWORD=password
POSTGRES_PORT=5433

# --------------------------------
# アプリ用 DB 接続設定
# （開発では host=localhost / prodでは service名）
# --------------------------------
DB_HOST=localhost
DB_PORT=5433
DB_NAME=gogym
DB_USER=gogym
DB_PASSWORD=password

# --------------------------------
# Go API 設定
# --------------------------------
APP_ENV=development
APP_PORT=8081
API_PORT=8081

# --------------------------------
# JWT 設定
# --------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32chars-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=168h

# --------------------------------
# CORS 設定
# --------------------------------
CORS_ALLOW_ORIGINS=http://localhost:3003

# --------------------------------
# Next.js 設定（ローカル npm 開発用）
# --------------------------------
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8081
