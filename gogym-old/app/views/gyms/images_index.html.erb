<% content_for(:title, "#{@gym.name}") %>
<% breadcrumb :gym, @gym %>
<%= render "/shared/gym_info" %>
<div class="wrapper">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="row justify-content-center review-container">
        <% @reviews.each do |review| %>
          <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex flex-column align-items-center">
            <% if review.image? %>
              <%= image_tag(review.image.url, class: "img-fluid mb-2") %>
              <p class="text-muted text-center">投稿者: <%= review.user.name %></p>
            <% else %>
              <p>画像なし</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
