<% content_for(:title, t(".inquiry")) %>
<% breadcrumb :inquiry %>
<%= render "shared/flash_message" %>
<div class="container">
  <div class="row position-relative position-absolute top-50 start-50 translate-middle">
    <h1 class="d-flex justify-content-center">お問い合わせ</h1>
    <div class="col-md-12 mx-auto">
      <%= render "shared/error_message", model: @inquiry %>
      <%= form_with(model: @inquiry, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :name, t('.name'), class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, t('.email'), class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :inquiry_content, t('.content'), class: "form-label" %>
          <%= f.text_area :inquiry_content, class: "form-control" %>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto">
          <%= f.submit t('.send'), class: "btn btn-success",data: { disable_with: t('.send') } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
