<div class='sticky-top'>
  <nav class='navbar navbar-expand-md navbar-dark bg-dark'>
    <div class="container-fluid">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <span style="color: #227D51; font-size: 30px; font-weight: 900; font-family: Arial;">GoGym</span>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <% unless current_page?(root_path) %>
          <%= search_form_for @q, url: gyms_path, class: 'd-flex mx-auto my-2 my-lg-0 position-relative' do |f| %>
            <div data-controller="autocomplete" data-autocomplete-url-value="/gyms/autocomplete" role="combobox">
              <div class="input-group">
                <%= f.search_field :name_cont, data: { autocomplete_target: 'input' }, class: 'form-control', placeholder: 'ジム名で検索' %>
                <button class="btn btn-success" type="submit"><%= t('top.index.search') %></button>
              </div>
              <ul class="list-group bg-white position-absolute w-100" data-autocomplete-target="results" hidden></ul>
            </div>
          <% end %>
        <% end %>
        <div class="navbar-nav ms-auto d-flex align-items-center flex-row">
          <p class="nav-item m-0">
            <%= link_to t('shared.header.login'), login_path, class: "btn btn-outline-light me-2", style: "font-size: 15px;" %>
          </p>
          <p class="nav-item m-0">
            <%= link_to t('shared.header.member_registration'), new_user_path, class: "btn btn-outline-success", style: "font-size: 15px;" %>
          </p>
        </div>
      </div>
    </div>
  </nav>
</div>
