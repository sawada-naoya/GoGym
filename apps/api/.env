# Go API サーバー用環境変数設定例
# 実際の開発・本番環境では適切な値に変更すること

# アプリケーション基本設定
APP_ENV=development
APP_ADDR=0.0.0.0
APP_PORT=8081

# データベース接続設定
DB_HOST=localhost
DB_PORT=3307
DB_NAME=gogym
DB_USER=gogym
DB_PASSWORD=password
TZ=Asia/Tokyo

# JWT認証設定（本番では32文字以上の強力なキーを使用）
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32chars-long
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h
JWT_ISSUER=gogym-api

# CORS設定
CORS_ALLOW_ORIGINS=http://localhost:3001
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true

# S3/MinIO設定
S3_ENDPOINT=http://localhost:9001
S3_BUCKET=gogym-photos
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9001/gogym-photos
S3_FORCE_PATH_STYLE=true

# Redis設定
REDIS_ADDR=localhost:6380
REDIS_PASSWORD=
REDIS_DB=0